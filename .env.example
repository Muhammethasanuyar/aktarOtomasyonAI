# ===========================================
# Aktar Otomasyon - Environment Variables Template
# Copy this file to .env and fill in actual values
# NEVER commit .env to source control!
# ===========================================

# Database Connection (overrides App.config)
# Leave empty to use App.config connection string
DB_SERVER=localhost
DB_NAME=AktarOtomasyon
DB_USER=
DB_PASSWORD=
# Set to "true" for Windows Auth (Trusted_Connection), "false" for SQL Auth
DB_TRUSTED_CONNECTION=true

# AI Provider Configuration
AI_PROVIDER=GEMINI
AI_MODEL=gemini-1.5-flash
AI_API_KEY=your-gemini-api-key-here
AI_TIMEOUT_SECONDS=30
AI_MAX_RETRY=3

# Environment
# Options: Development, Staging, Production
ENVIRONMENT=Development

# Application Settings
APP_VERSION=1.0.0
REPORT_PATH=.\reports
TEMPLATE_PATH=.\templates

# Logging Configuration
# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Production should use INFO or WARNING
LOG_LEVEL=INFO
# Number of days to retain log files
LOG_RETENTION_DAYS=90

# Optional: Proxy Settings (if behind corporate proxy)
# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=https://proxy.company.com:8080
